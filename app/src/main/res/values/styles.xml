<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fragment_title_style">
        <item name="android:textSize">@dimen/ts_app_title</item>
        <item name="android:layout_marginTop">@dimen/mg_default</item>
    </style>


    <style name="input_field_title">
        <item name="android:textSize">@dimen/ts_regular_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="input_field_style">
        <item name="android:textSize">@dimen/ts_regular_text</item>
        <item name="android:layout_marginTop">@dimen/mg_default</item>
        <item name="android:background">@drawable/bg_edit_texts</item>
    </style>


    <style name="edit_text_title">
        <item name="android:textSize">@dimen/ts_regular_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/mg_default_edit_text_title</item>
    </style>
    <style name="edit_text_style">
        <item name="android:textSize">@dimen/ts_regular_text</item>
        <item name="android:background">@drawable/bg_edit_texts</item>
        <item name="android:paddingStart">@dimen/pad_default_edit_texts</item>
        <item name="android:paddingEnd">@dimen/pad_default_edit_texts</item>
        <item name="android:layout_marginTop">@dimen/mg_default_edit_text_title</item>
    </style>
    <style name="edit_text_with_currency_style" parent="edit_text_style">
        <item name="android:paddingEnd">@dimen/pad_end_edit_text_with_currency</item>
    </style>

    <style name="buttons_style">
        <item name="android:textSize">@dimen/ts_regular_text</item>
        <item name="android:layout_marginTop">@dimen/mg_top_button</item>
        <item name="android:layout_marginBottom">@dimen/mg_default</item>
        <item name="android:background">@drawable/bg_buttons</item>
    </style>

    <style name="currency_text">
        <item name="android:textSize">@dimen/ts_small_text</item>
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_end_currency_text</item>
    </style>

    <style name="fragment_layout_style">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingStart">@dimen/pad_default_start_end</item>
        <item name="android:paddingEnd">@dimen/pad_default_start_end</item>
    </style>

</resources>